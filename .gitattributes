# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# TOML files
*.toml text eol=lf

# Text files
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Python pickle files (binary)
*.pkl binary
*.pickle binary

# Image files (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
